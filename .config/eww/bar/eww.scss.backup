@import '/home/termai/.cache/wal/colors.scss';
/*
//Pink(bg)//Black(fg)
$background:#d3b0b9;
$foreground:#0C0813;
*/

*{
  all:unset;
}


.newbar {

  font-family: "JetBrainsMono NF"; 
}

.parent {
  //background-color:$background;
  border-radius:16px;
  //padding:2px 0px 2px 0px;
  opacity:0.9;
  border:2px solid $foreground;
}



.workspaces {
  padding: 1px 2px 1px 2px;
}


.workspaces-button {

  color: $foreground;
  padding:0px 18px;
  font-size:20px;
  border-radius:8px;
  margin-left:6px;
  margin-top:6px;
}




.workspaces-button:active {
  background-color:$foreground;
  color:$background;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.focused {
  background-color:$foreground;
  color:$background;
}

.user {
  padding:0px 5px;
}

.profile {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  border:2px solid $foreground;
  border-radius: 100%;
  box-shadow: 0 0 2px 2px rgba($background, 0.3);
  min-width:36px;
  //min-height:1px;
}



.text-user {
  margin-left:4px;
  font-size:1em;
}

.text-text > label {
  text-shadow:2px 2px 4px white;
  font-weight:bold;
  color:$foreground;
}
.text-text {
  border-radius:6px;
}


.sidestuff {
  margin:1px 6px 1px 10px;
}

.parent-sides {
  //margin-right:1.5px;
  //padding:2px 2px 2px 2px;
  margin-right:1px;
  padding:1px;
}
.time {
  border:none;
  //padding:0px 2px 0px 8px;
  padding:0px 2px 0px 6px;
  border-radius:6px;
  color:$background;
  background-color:$foreground;
  margin-right:10px;
  font-size:0.9em;
  font-weight:bold;
}
.batt {
  padding:0px 8px 0px 8px;
  border-radius:8px;
  color:$background;
  background-color:$foreground;
  margin-right:10px;
  font-size:0.9em;
}

.icons-button {
  margin-top:4px;
  margin-right:10px;
}

.prayer {
  padding:0px 8px 0px 8px;
  border-radius:8px;
  color:$background;
  background-color:$foreground;
  margin-right:10px;
  font-weight:bold;
  font-size:0.9em;
}

.power {
  padding:0px 12px;
  border-radius:8px;
  color:$background;
  background-color:$foreground;
  margin-right:2px;
  border:1px solid $foreground;
  font-size:0.9em;
}

.power:active {
  background-color:$foreground;
  color:$background;
  transition: background-color 0.3s linear, color 0.3s linear;
  border:1px solid $foreground;
  font-size:0.9em;
}

.power:hover {
  background-color:$background;
  color:$foreground;
  transition: background-color 0.5s ease, color 0.5s ease;
  border:1px solid $foreground;
  border-radius:8px;
  font-size:0.9em;
}
.volume {
  padding:0px 6px;
  border-radius:8px;
  color:$background;
  background-color:$foreground;
  margin-right:10px;
  margin-left:1px;
  font-size:1em;
}

